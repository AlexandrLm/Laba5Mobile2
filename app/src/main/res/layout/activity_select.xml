<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".SelectActivity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
        android:text="Player name"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawingCacheQuality="high"
            android:layoutMode="opticalBounds">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:background="@drawable/background"
                android:text="Атака"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:background="@drawable/background"
                android:text="Сильная атака"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:background="@drawable/background"
                android:text="Защита"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/headButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Голова"
                android:textSize="14sp" />

            <Button
                android:id="@+id/heavyHeadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Голова"
                android:textSize="14sp" />

            <Button
                android:id="@+id/defendHeadButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="defendButtonPress"
                android:text="Голова"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/bodyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Тело"
                android:textSize="14sp" />

            <Button
                android:id="@+id/heavyBodyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Тело"
                android:textSize="14sp" />

            <Button
                android:id="@+id/defendBodyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="defendButtonPress"
                android:text="Тело"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/legButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Ноги"
                android:textSize="14sp" />

            <Button
                android:id="@+id/heavyLegButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Ноги"
                android:textSize="14sp" />

            <Button
                android:id="@+id/defendLegButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="defendButtonPress"
                android:text="Ноги"
                android:textSize="14sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/noneAtakButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:backgroundTint="@color/button_selector"
                android:onClick="attackButtonPress"
                android:text="Не атаковать"
                android:textSize="14sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/atakaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_span="2"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:background="@drawable/background"
                android:text="Атака"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/defendText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="@dimen/material_emphasis_medium"
                android:background="@drawable/background"
                android:text="Защита"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/doneButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:backgroundTint="@color/button_selector"
        android:onClick="doneButtonPress"
        android:text="Закончить ход"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout" />

</androidx.constraintlayout.widget.ConstraintLayout>